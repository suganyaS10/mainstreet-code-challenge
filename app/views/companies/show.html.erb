<div class="container py-5">
  <h3>Company</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Companies", companies_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Edit", edit_company_path %>
      <%= link_to "Delete", company_path(@company), class: "delete-exp", title: 'Delete', method: :delete, 'data-confirm' => 'Are you sure you want to delete this company?' %>
    </div>
  </div>
  <div class="bg-success">
    <div class="container p-5 text-white">
      <h1><%= @company.name %></h1>
      <h3>City, State</h3>
      <pre><%= (@company.city || 'N/A') + ',' + (@company.state || 'N/A') %></pre>
    </div>
  </div>
  <% if @company.description.present? %>
    <div class="bg-light p-5">
      <%= @company.description %>
    </div>
  <% end %>
  <div class="bg-success text-white text-center py-3">
    <p class="lead"><%= @company.phone %> — <%= @company.email %></p>
  </div>
</div>
